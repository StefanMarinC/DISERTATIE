<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding: 0 0 0 0; background-color:#3a3a3c">
    <div style="background-color:#9c301a; height:75px">
        <div style="display:flex; padding-left:20px;">
            <img src="~/Resources/Logo.png" style="height:75px; width:180px; cursor:pointer" onclick="@("window.location.href='" + @Url.Action("Home", "Home") + "'")" />
            <div style="width:75%; text-align:center; height:75px">
                <div style="font-size:large; font-family:Arial sans-serif; font-weight:bold; color:white; padding-top:20px">
                    Cases
                </div>
            </div>
            <div style="width:220px; height:75px; display:flex; justify-content:space-around">
                <div style="font-size:large; font-family:Arial sans-serif; color:white; padding-top:20px;">
                    @Session["Username"].ToString()
                </div>
                <div class="form-group" style="text-align:center; padding:20px 0 0 0">
                    <div class="col-md-offset-2 col-md-10" style="margin-left:0; margin-right:0;">
                        <input value="Logout" class="btn btn-primary" style="background-color:lightslategray; border-color:lightslategray; width:100px" onclick="@("window.location.href='" + @Url.Action("Logout", "Login") + "'")" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="margin:10px 20px 10px 20px; background-color:#3a3a3c;">
        <div style="display:flex; justify-content:space-between; flex-wrap:wrap">
            <div style="padding:20px">
                <label style="color:white; font-size:larger; font:bold">
                    Client name
                </label>
                <select class="form-control" id="ClientID" name="client_id">
                    <option value="" selected disabled hidden></option>
                    @foreach (var client in ViewBag.CasesSearchClient)
                    {
                        <option>@client.Name</option>
                    }
                </select>
            </div>
            <div style="padding:20px">
                <label style="color:white; font-size:larger; font:bold">
                    Zone
                </label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchZone" class="form-control" placeholder="Zone" name="zone">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchOwner" class="form-control" placeholder="Owner" name="owner">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchCaseID" class="form-control" placeholder="Case id" name="case_id">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchAccountID" class="form-control" placeholder="Account id" name="account_id">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchCustomerID" class="form-control" placeholder="Customer id" name="customer_id">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchSSN" class="form-control" placeholder="SSN" name="ssn">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchSubscriberName" class="form-control" placeholder="Subscriber name" name="subscriber_name">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchSubscriberType" class="form-control" placeholder="Subscriber type" name="subscriber_type">
                </div>
            </div>
            <div style="padding:20px">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <em aria-hidden="true" class="fa fa-search">
                            </em>
                        </span>
                    </div>
                    <input type="text" id="searchContractNumber" class="form-control" placeholder="Contract number" name="contract_number">
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
